{% extends "@RocketSellerTwoPick/BackOffice/backOfficeBase.html.twig" %}

{% block fos_user_content %}
    <div id="main" class="col-sm-10">
        <div class="col-md-12">
            <div class="panel panel-title">
                Generar más códigos de Beta
            </div>
            <input id="morenumber" type="text" placeholder="20">
            <a id="more" class="btn btn-default notAjax">Generar</a>
            <br>
            <table>
                <tr>
                    <th>Número</th>
                    <th>Código</th>
                </tr>
                {% for code in codes %}
                    <tr>
                        <td>
                            {{ loop.index }}
                        </td>
                        <td>
                            <input class="code" value="{{ code.code }}" onClick="this.select();document.execCommand('copy');">
                        </td>
                    </tr>
                {% endfor %}

            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script>
    $("#more").on("click", function(e){
        e.preventDefault();
        window.location.href = "/backoffice/generate/codes/"+$("#morenumber").val();
    });
</script>
{% endblock %}
