{% extends "::base.html.twig" %}
{% block fos_user_content %}
    <div class="page-header">
        <h1>{{  contract["employee"]["name"] }} </h1>
        <small>{{ contract["employee"]["document"]["type"] }} {{ contract["employee"]["document"]["number"] }}</small>
        <a class="btn btn-default" href="#" role="button">Liquidar empleado</a>
    </div>
    <div class="row">
        {% for key, data in contract.contract %}
            <div class="col-sm-6 col-md-4">
                <div class="caption">
                    <h3>{{ key }}</h3>
                    {% if data is iterable %}
                        {# users is probably a string #}
                        {% for key, d in data %}
                            {{ key }}: {{ dump(d) }}
                        {% endfor %}
                    {% else %}
                        <p>{{ data }}</p>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock fos_user_content %}