<body {% if body_color|default %}style="background-color: {{ body_color }}"{% endif %}>
<div class="content">
    {% from '@RocketSellerTwoPick/modal_templates/modal_picker.twig' import modal %}
    {% block modales %}
        {{ modal(17) }}
    {% endblock %}

    {% block fos_user_content %}
        <div class="modal-dialog modal-md" role="document" id="cuerpoModal">
            <div class="modal-content">
                <div class="modal-body" style="padding: 0">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="close_span" aria-hidden="true">&times;</span>
                    </button>
                    <div class="row-fluid block-Intro-green clearfix" id="msgSinVerificar1" style="margin-top: 0;">
                        <div class="col-sm-12 col-xs-12 up-Intro">Subir {{ documentName  }} de {{ personName }}</div>
                    </div>
                    <div class="row-fluid clearfix">
                        <div id="add_document_content" class="col-md-12" style="padding: 10px 15px 10px 15px">
                            <div id="add_document_header" class="col-md-12 text-center">
                                <h1><strong>Selecciona una opción</strong></h1>
                            </div>
                            <div id="add_single_file_document" class="col-md-6 text-center" style="padding:20px 20px 20px 20px">
                                <div class="col-md-12" style="border: solid; border-width: 2px; border-radius: 10px;background-color: #5D6979 ">
                                    <h4 id="show_add_single_file" style="color: white "><br>Mi documento<br>es un solo<br>archivo<br><br></h4>
                                </div>
                            </div>
                            <div id="add_multiple_file_document" class="col-md-6 text-center" style="padding:20px 20px 20px 20px">
                                <div class="col-md-12" style="border: solid; border-width: 2px; border-radius: 10px; background-color: #5D6979">
                                    <h4 id="show_add_multiple_file" style="color: white "><br>Mi documento<br>tiene varias<br>imágenes<br><br></h4>
                                </div>
                            </div>
                        </div>
                        <script>
                            $.getScript("{{ asset('public/js/uploadDoc.js') }}").done(function () {
                                startUpload();
                            });
                        </script>
                        <div id="upload_single_doc_form" class="col-md-12" style="display: none" style="padding:20px 20px 20px 20px">
                            {{ form_start(form,
                                {'action': path('documentos_employee',{
                                    'entityType': entityType ,
                                    'entityId':entityId,
                                    'docCode':docCode,
                                    'idNotification':idNotification
                                }), 'method': 'POST'})
                            }}
                            {{ form_errors(form) }}
                            <div style="display: none;">
                                {{ form_row(form.mediaMedia.unlink) }}
                            </div>
                            <div style="display: none;">
                                {{ form_row(form.documentTypeDocumentType) }}
                            </div>
                            <div class="row modal-responsive">
                                <div class="col-md-12">
                                    <div class="col-md-12 subir-archivo" style="margin-top: 20px;">
                                        <h4><strong>Selecciona un archivo</strong></h4>
                                        <h5 style="font-stretch: expanded">Los formatos aceptados son .pdf .jpg .png .jpeg</h5>
                                    </div>
                                    <div class="col-sm-12 text-center">
                                        {{ form_widget(form.mediaMedia.binaryContent,
                                            {'attr':
                                                {'accept':
                                                    "application/pdf,image/jpeg,image/tiff,image/png",
                                                    'style':"margin-top:10px;margin-bottom:15px"
                                                }
                                            })
                                        }}
                                    </div>
                                    <div class="col-md-12 text-center" style="margin-bottom: 20px;">
                                        <div class="col-md-6">
                                            {{ form_row(form.save,{'attr':{'style':'margin:20px 0 0 0'}}) }}
                                            {{ form_end(form) }}
                                        </div>
                                        <div class="col-md-6">
                                            <a id="add_doc_cancel_button1" class="btn btn-bitbucket" style="margin: 20px 0 0 0">
                                                <strong>Cancelar</strong></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="upload_multiple_doc_form" class="col-md-12" style="display: none" style="padding:20px">
                            {{ form_start(form2,{'action': path('documentos_employee',{
                                'entityType': entityType ,
                                'entityId':entityId,
                                'docCode':docCode,
                                'idNotification':idNotification
                            }), 'method': 'POST','attr':{'id':'add_multiple_files_form'}}) }}
                            <div class="col-md-12" style="margin-top: 20px; margin-bottom: 20px; padding-left: 8px">
                                <ul id="file-field-list"
                                    class="file_add_prototype" style="list-style-type: none"
                                    data-prototype='<div class="col-md-6" style="padding:0 0 0 0">{{ form_widget(form2.files.vars.prototype|e('html_attr')) }}</div>'>
                                </ul>
                                <div class="col-md-12 text-center">
                                    {% for fileField in form2.files %}
                                            {{ form_row(fileField,{'attr':{'class':'col-md-10','style':'padding-left:20px'}}) }}
                                    {% endfor %}
                                    <a id="add_file_link" style="color:#00cdcc;text-decoration: none;margin-right: 5px;"><i class="fa fa-plus-circle fa-2x" style="color:#00cdcc;font-size:20px;"></i> <span style="display: inline;font-size:20px">Agregar imagen</span></a>
                                    <a id="remove_file_link" style="color:#fd5c5c;text-decoration: none;font-size:20px;margin-top: 10px;margin-left: 5px;"><i class="fa fa-minus-circle " style="color:#fd5c5c;font-size:20px"></i> Eliminar imagen</a>
                                </div>
                            </div>
                            <div class="col-md-12 text-center" style="margin-bottom: 20px;">
                                <div class="col-md-6">
                                    {{ form_row(form2.save,{'attr':{'style':'margin: 20px 0 0 0'}}) }}
                                </div>
                                <div class="col-md-6">
                                    <a id="add_doc_cancel_button2" class="btn btn-bitbucket" style="margin: 20px 0 0 0"><strong>Cancelar</strong></a>
                                </div>
                            </div>
                            {{ form_end(form2) }}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    {% endblock fos_user_content %}
</div>
</body>
</html>




