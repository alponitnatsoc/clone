    function suscribirme(event) {
        var $btn = event;
        $btn.button('loading');

        var email = $("#emailSus").val();

        $.post( "/api/public/v1/suscribes/users", { email: email })
        .done(function( data ) {
            $btn.button("reset");
            $('#myModal').modal({
                keyboard: false
            })
        }).fail(function(data){
            $btn.button('reset');
            $('#myModalError').modal({
