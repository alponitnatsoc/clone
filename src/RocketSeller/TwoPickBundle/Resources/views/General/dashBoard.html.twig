{% extends "::base.html.twig" %}
{% block title %}Symplifica - Configuración inicial{% endblock %}
{% block header %}{% endblock header %}
{% block fos_user_content %}
    <!-- <div class="col-sm-12 col-xs-12 block-Data">
        <h1>Symplifícate</h1>
        <span style="color: #969696;">Configura tu perfil para que nuestra herramienta haga el trabajo por ti. <br />
          <strong>Completa los 3 pasos y estarás listo para usar Symplifica.</strong></span>
    </div> -->
    <div class="col-sm-12 col-xs-12 align-Resp no-Padding-Col azulclaro">
        <div id="" class="col-sm-12 col-xs-12 blockStep inline  nav-link">
            <div id="" class="col-md-2 col-xs-12 txt-AD0" style="text-align: left;">
                 <img src="/img/block-inline-good.png" class="center-block">
            </div>
            <div id="" class="col-md-10 col-xs-12">
                <div id="" class="text-left">
                    <h1 style="color:#FFF;margin:15px 0 0;font-weight:600;font-size:25px">Symplifica</h1>
                    <span style="font-weight:100;color:#FFF;font-size:15px">Configura tu perfil para que nuestra herramienta haga el trabajo por ti. <br />
                      <strong>Completa los 3 pasos y estarás listo para usar Symplifica.</strong></span>
                </div>
            </div>
        </div>
    </div>
    {% set anteriorListo = true %}
    {% for step in steps %}

        {% if step.boxStyle=="small" %}
            <div class='col-sm-12 col-xs-12'><!--wizardAddLink-->
                <a class="newEmplAd" href="{{step.url}}">
                    <i class="fa fa-plus-circle azulclarofont"></i> Agregar empleado nuevo
                </a>
            </div>
        {% else %}
        <div class="col-sm-12 col-xs-12">
            <div id='' class='col-sm-12 col-xs-12'>
                <a id='' class='btn col-sm-12 col-xs-12 blockStep {{ (step.class is defined)? step.class: '' }} {% if (step.url=="") %} blocked {% else %}{% if step.state!=100 %} active {% else %} complete {% endif %} {% endif %} nav-link' href="{{step.url}}">
                    <div id='' class='col-md-2 col-xs-12 txt-AD0' style="text-align: left;">
                    {% if step.state==100 %}<img src="/img/block-complete.png" class="center-block">{% else %} {% if step.state==0 %}<img src="/img/block-pending.png" class="center-block">{% else %}<img src="/img/block-active.png" class="center-block">{% endif %}{% endif %}
                </div>
                <div id='' class='col-md-6 col-xs-12 txt-AD1'>
                    <div id='' class='text-left txt-AD1-center' >
                        {% if step.state!=100 %}<span class="step">Paso {{step.paso}} de 3</span>{% endif %}
                        {{step.name}}
                    </div>
                </div>
                <div id='' class='col-md-2 col-xs-12 txt-AD2 txt-AD2-center'>
                    {{ step.state|round }}% {% if step.state==100 %}{% endif %}
                </div>
                <div id='' class='col-md-2 col-xs-12 txt-AD3'>
                    {% if (step.url!="") %}
                        <div id='' class='btn stepIni btn-symplifica btn-orange'>
                            {{step.stateMessage}}
                        </div>
                    {% endif %}
                </div>
            </a>
          </div>
        </div>
    {% endif %}

    {% if step.state==100 %}
        {% set anteriorListo = true %}
    {% else %}
        {% set anteriorListo = false %}
    {% endif %}

{% endfor %}

{% endblock fos_user_content %}
