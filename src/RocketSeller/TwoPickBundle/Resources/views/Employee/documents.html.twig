{% extends "::base.html.twig" %}
{% block content %}
	<div class="container col-md-12">
		<div class="col-md-4">
			<table class="table">
				<thead>
					<tr><th>Documentos</th></tr>
				</thead>
				<tbody>
				  {% for documentType in documentTypeByEmployee %}	  	
			  			<tr>
				  			<td>
				  				{{ documentType.name }}			
				  			</td>
				  		</tr>	  			
				  {% endfor %}
				</tbody>
			</table>
		</div>
  		<div class="col-md-6">
	  		<table class="table">
			    <thead>
			      <tr>	           
			        <th>{{employee.personPerson.names}} {{employee.personPerson.lastName1}}</th>          	       
			      </tr>		      
			    </thead>	    	
				    <tbody>
				    	<tbody>
				    		
			    			{% set i = 0 %}
							{% for document  in documentTypeByEmployee %}								
								{% if document in documentsPerEmployee %}
									<tr>											
										<td>Ya lo tienes</td>
										<td><a href="{{ path('edit_documents', {'id': employee.personPerson.idPerson , 'idDocument':keys[i]}) }}">Editar</a></td>
										<td><a href="{{ path('download_document', {'id': employee.personPerson.idPerson , 'idDocument':keys[i]}) }}">Descargar</a></td>	
									</tr>									
								{% else %}
									<tr class="danger">
										<td><a href="{{ path('documentos_employee', {'id': employee.personPerson.idPerson , 'idDocumentType':document.idDocumentType}) }}">Subir documento</a></td>
										<td>-</td>
										<td>-</td>
									</tr>
								{% endif %}									  							  								
								{% set i = i + 1 %}			
							{% endfor %}

			  			</tbody>	          	  	     
				    </tbody>
	  		</table>
  		</div>	  		
{% endblock %}

