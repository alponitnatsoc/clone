        <script>
        function shareProfile(event) {
                 var $btn = event;
                 $btn.button('loading');

                 var email = $("#email").val();

                 $.post( "/api/public/v1/suscribes/users", { email: email })
                 .done(function( data ) {
                     $btn.button("reset");
                     $('#myModal').modal({
                         keyboard: false
                     });
                     var a = {
                         email : email,
                         name : email
                     };
                     $.post("/api/public/v1/sends/emails", {template_name: "Welcome Suscripcion Landing", "to[0]": a, subject: "Bienvenido a Symplifica"})
                     .done();
                 }).fail(function(data){
                     console.log('He fallado')
                     $btn.button('reset');
                     $('#myModalError').modal({
                         keyboard: false
                     })
                 });
            }
            $('#myModalError').on('hidden.bs.modal', function () {
                  $('#email').val('');
              });
              $('#myModal').on('hidden.bs.modal', function () {
                  $('#email').val('');
              });
        </script>
