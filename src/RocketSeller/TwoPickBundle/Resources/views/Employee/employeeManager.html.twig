{% extends "::base.html.twig" %}
{% block fos_user_content %}
    {% if app.user.status is defined%}
        {% set status = app.user.status %}
    {% else %}
        {% set status = 0 %}
    {% endif %}
    <div class="col-sm-12 col-xs-12 align-Resp">
        <a id="" class="btn col-sm-12 col-xs-12 blockStep inline  nav-link" href="/register/edit">
            <div id="" class="col-md-2 col-xs-12 txt-AD0" style="text-align: left;">
                 <img src="/img/block-inline.png" class="center-block">                    
            </div>
            <div id="" class="col-md-10 col-xs-12 txt-AD1">
                <div id="" class="text-left">
                    Mis empleados
                </div>
            </div>
        </a>
    </div>
    <div class="col-xs-12" id="employees">
        <div class="col-sm-12 col-xs-12">
            <div class="row">
                {% for employee in employees %}
                    <div class="col-md-4 employee">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="employee_name">
                                    <b>{{ employee.employeeEmployee.personPerson.names }}</b>
                                </div>
                                <div class="">
                                    {% if status < 2 %}
                                        <a href="/register/employee/{{employee.getEmployeeEmployee.getIdEmployee()}}">Editar</a>
                                    {% else %}
                                        <a href="{{ path('final_liquidation', { 'id': employee.idEmployerHasEmployee }) }}">Liquidacion definitiva</a>
                                        /
                                        <a href="/manage/employee/{{employee.getEmployeeEmployee.getIdEmployee()}}">Ver</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock fos_user_content %}