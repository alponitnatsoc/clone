{% extends "::base.html.twig" %}
	{% block content %}
		{% if employee %}
			<h3>El empleado: {{ employee.personPerson.names }}</h3>
		{% endif %}
		<table style="width:100%">
		  <tr>
		    <td>Beneficiary name</td>
		    <td>Beneficiary last name</td> 
		    <td>Entity</td>
		    <td>Actions</td>
		  </tr>	
	  	{% if beneficiaries %}  
	  		{% for beneficiary in beneficiaries %}
	  			<tr>				
					<td>{{ beneficiary.beneficiaryBeneficiary.personPerson.names }}</td>
					<td>{{ beneficiary.beneficiaryBeneficiary.personPerson.lastName1 }}</td>
					<td>{{ beneficiary.entityEntity.name }}</td>
					<td><a href="/manage/employee/{{employee.idEmployee}}/beneficiary/{{beneficiary.beneficiaryBeneficiary.idBeneficiary}}">Editar</a></td>
			  	</tr>
			{% endfor %}
		{% else %}
			<p>No hay beneficiarios (<a href="/register/employee/{{employee.idEmployee}}/beneficiary/">Agregar Beneficiarios</a>)</p>
		{% endif %}
		</table>	
	{% endblock %}