{% extends '::base.html.twig' %}

{% block title %}Contacto{% endblock%}

{% block body %}
    <header>
        <h1>Contacto Symplifica</h1>
    </header>

    <p>Quieres contactar a Symplifica?</p>

    {% for label, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
            <div class="alert alert-{{ label }}">
                {{ flash }}
            </div>
        {% endfor %}
    {% endfor %}

    <form action="{{ path('contact') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_widget(form) }}
        <input type="submit" value="Enviar" />
    </form>
    <script>
    function setSubject(element) {
        $("form #contact_subject").val(element.selectedOptions[0].label);
    }
    </script>
{% endblock %}