                } else {
                    $("#divPaymentMethods").addClass('toHide');
                    $("#divCardNumber").removeClass('toHide');
                }
            });

            $("#codigo_referido").focusout(function () {
                if ($("#codigo_referido").val().length >= 6) {
                    $.ajax({
                        method: "POST",
                        url: "{{ path('api_public_post_validate_code') }}",
