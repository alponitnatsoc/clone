{% block fos_user_content %}


    <div class="row-fluid" id='pagoMembresiaFormContainer'>
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div id="infoFacturacion" class="infoFacturacion">
            <span style="margin: 20px">Ingrese la información de pago. Los campos marcados con * son obligatorios:</span>
            <div style="margin: 20px">
                <span><b>Nombre del titular y dirección de facturación*</b></span>
                <input type="checkbox" name="chkSameAdress" id="chkSameAdress" value="1" checked/>
                <label for="chkSameAdress">Los mismos datos del empleador</label>
                <div name="divSameAdress" id="divSameAdress">
                    <label style="font-weight: bold;">{{ employer.names ~" "~ employer.lastName1 ~" "~ employer.lastName2  }}</label><br>
                    <label>{{ employer.mainAddress }}</label><br>
                    <label>{{ employer.city.name ~", "~ employer.department.name }}</label>
                </div>
                <div name="divOtherAdress" id="divOtherAdress" class="toHide">
                    <div class="col-sm-12 col-xs-12 blockUpData" >
                        <div class="col-sm-4 col-xs-12">
                            <img id="typePerson" src="/img/typePerson.png">
                            {{ form_row(form.personType, { 'attr': {'class': 'foo'} }) }}
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <img id="documentType" src="/img/documentType.png">
                            {{ form_row(form.documentType) }}
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <img id="documentNumber" src="/img/documentNumber.png">
                            {{ form_row(form.document) }}
                        </div>
                    </div>

                    <div class="col-sm-12 col-xs-12 blockUpData">                        
                        <div id="datosNIT" name="datosNIT" class="toHide">
                            <div class="col-sm-12 col-xs-12">
                                {{ form_row(form.razonSocial) }}
                            </div>
                            <br><span>Datos del administrador de la herramienta</span><br>
                        </div>
                        <div class="col-sm-6 col-xs-12">
                            {{ form_row(form.names) }}
                            {{ form_row(form.lastName1) }}
                        </div>
                        <div class="col-sm-6 col-xs-12">
                            {{ form_row(form.lastName2) }}
                        </div>
                    </div>

                    <div class="col-sm-12 col-xs-12 blockUpData">
                        <div class="col-sm-6 col-xs-12">
                            {{ form_row(form.department) }}
                            {{ form_row(form.city) }}
                        </div>
                        <div class="col-sm-6 col-xs-12">
                            {{ form_row(form.address) }}
                            {{ form_row(form.phone) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div id="infoTarjeta" class="infoTarjeta form-group">
            <div class="col-md-12 center">
                <span style="margin-top: 20px"><b>Información de la tarjeta de crédito*</b></span>
                <input type="checkbox" name="chkSameTCC" id="chkSameTCC" value="1" checked/>
                <label for="chkSameTCC" style="font-weight: normal">Usar la misma tarjeta de crédito del pago de sueldo de los empleados</label>       
            </div>     
            <div class="col-md-12" style="margin-top: 20px">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <label>Número tarjeta de crédito</label><br>
                        <div id="divCardNumber" class="toHide" >
                            <input type="text" id="card_number" name="card_number" class="form-control" placeholder="1234 5678 9012 3456" required="required">
                        </div>
                        <div id="divPaymentMethods">
                            <select id="paymentMethod" name="paymentMethod" class="form-control" required="required">
                                <option value="">Seleccione...</option>
                                {% for paymentMethod in paymentMethods %}
                                    <option value="{{ paymentMethod['method-id'] }}">{{ paymentMethod['account-number'] }}</option>
                                {% endfor  %}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div id="cType"></div>
                    </div>
                    <div class="col-md-2">
                        <label>Cuotas</label><br>
                        <select id="cuotas" name="cuotas" class="form-control" required="required">
                            <option value="1">1</option>
                            <option value="1">2</option>
                            <option value="1">3</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3" style="margin-top: 10px">
                    <label>Fecha de vencimiento</label><br>
                    <div style="display: inline-block">
                        <label>Mes</label><br>
                        <input type="text" name="expiry_date_month" id="expiry_date_month" maxlength="2" placeholder="mm" required="required">
                    </div>                    
                    <div style="display: inline-block">
                        <label>Año</label><br>
                        <input type="text" name="expiry_date_year" id="expiry_date_year" maxlength="4" placeholder="yyyy" required="required">
                    </div>
                </div>
                <div class="col-md-3" style="margin-top: 10px">
                    <label>Código de seguridad</label><br>
                    <div style="display: inline-block">
                        <label></label><br>
                        <input type="text" name="cvv" id="cvv" maxlength="3" placeholder="123" required="required"><div class="cvvHelp">?</div>
                        <div id="cvvHelp" class="toHide">
                            Corresponde a los tres dígitos ubicados al respaldo de su tarjeta de crédito
                            <img src="/img/cvvHelp.png"> 
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div id="codigoReferido" class="codigoReferido form-group">
            <div class="col-md-12 center" style="margin-top: 20px">
                <label>¿Cuenta con algún código de promoción?</label>
                <span>Ingrese aquí el código promocional que recibió como usuario referido o en alguna de nuestras comunicaciones</span>
                <input type="text" name="codigo_referido" id="codigo_referido" maxlength="10" placeholder="Código"  style="margin-top: 20px">
                <div id="codigo_referido_estado" class="text-small"></div>
            </div>
        </div>

        <div id="confirmacionPago" class="confirmacionPago form-group" style="margin: 10px 0px 10px 0px">
            <div class="col-md-12 center" style="margin-top: 30px">
                <div class="col-md-12" style="margin-bottom: 20px;">
                    <label>Confirmación de pago</label>
                </div>
                <div class="col-md-12">
                    <div class="col-md-2">

                    </div>
                    <div class="col-md-8 text-left" style="border-bottom: 1px #919191 dotted; padding-bottom: 10px;">
                        <div class="col-md-8 center" style="margin-bottom: 10px;">
                            <b>Producto</b>
                        </div>
                        <div class="col-md-8 text-left">
                            Servicio mensual Symplifica por:
                        </div>
                        {% set total = 0 %}
                        {% for employee in employerHasEmployee %}
                            <div class="col-md-12">
                                <div class="col-md-1">
                                    <div class="glyphicon glyphicon-user"></div>
                                </div>                            
                                <div class="col-md-8">       
                                    {{ employee.employeeEmployee.personPerson.names ~' '~ employee.employeeEmployee.personPerson.lastName1 }} 
                                    emplado a {{ contratos[employee.idEmployerHasEmployee].timeCommitmentTimeCommitment.name|lower }}
                                </div>  
                                <div class="col-md-3">
                                    {% if contratos[employee.idEmployerHasEmployee].timeCommitmentTimeCommitment.idTimeCommitment == 1 %}
                                        <b>$ 25.000</b
                                        {% set total = total+25000 %}
                                    {% elseif contratos[employee.idEmployerHasEmployee].timeCommitmentTimeCommitment.idTimeCommitment == 2 %}
                                        <b>$ 20.000</b>
                                        {% set total = total+20000 %}
                                    {% elseif contratos[employee.idEmployerHasEmployee].timeCommitmentTimeCommitment.idTimeCommitment == 3 %}
                                        <b>$ 15.000</b>
                                        {% set total = total+15000 %}
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="col-md-2">

                    </div>
                </div>

                <div class="col-md-12">        
                    <div class="col-md-2">

                    </div>              
                    <div class="col-md-8">
                        <div class="col-md-12">
                            <div class="col-md-1">
                            </div>                            
                            <div class="col-md-8 text-right" style="font-size: 20px; padding-top: 5px;">
                                <b>TOTAL:</b>
                            </div>  
                            <div class="col-md-3 te" style="padding-top: 5px;">
                                <div  style="font-size: 20px;"><b>$ {{ total }}</b></div>
                                <div style="font-size: 10px;">Incluye IVA</div>
                            </div>
                        </div> 
                    </div>
                    <div class="col-md-2">

                    </div> 

                </div>      
            </div>
        </div> 

        <div class="col-md-12 center" style="margin: 10px 0px 10px 0px">
            <div style="display: -webkit-inline-box; padding: 10px; text-align: center;">
                <a class="btn btn-default notAjax" href="{{ path('subscription_choices') }}">Atras</a>
            </div>
            <div style="display: -webkit-inline-box; padding: 10px; text-align: center;">
                <a id="sumbit"  class="btn btn-default btn-orange notAjax">Finalizar</a>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
