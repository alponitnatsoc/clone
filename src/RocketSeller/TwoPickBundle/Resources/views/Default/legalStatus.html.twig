{% block javascripts %}
    {{ parent() }}
	<script>
	var flag = true;
	function validate() {
	    var legal = document.forms[0];
	    var i;
	    for (i = 0; i < legal.length; i++) {
	        if (!legal[i].checked) {
	            flag = false;
	        }
	    }
	}
	function done(){
		validate();
		if (flag) {
			document.location.href = '/change-flag';
			clearForm();
		}else{
			document.location.href = '/legal-assist';
		}
	}
	function clearForm(){
		var legal = document.forms[0];
		legal.reset();
	}
	</script>
