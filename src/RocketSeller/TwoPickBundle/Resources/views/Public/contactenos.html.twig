        function jsLoader(url) {
            if (typeof url !== 'undefined') {
                if (url.lastIndexOf("/contactenos") !== -1) {
                    $.getScript("{{ asset('public/js/contact.js') }}").done(function () {
                        startContact();
                    });
                    return true;
                }
                return false;
            }
