{% trans_default_domain 'FOSUserBundle' %}
{% block subject %}{% autoescape false %}Recaudo fallido{% endautoescape %}{% endblock %}
{% block body_html %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300italic,600,600italic,700" rel="stylesheet" type="text/css">
    <title>Responsive email</title>
    <style type="text/css">
      body {margin: 10px 0; padding: 0 10px; background: #FFF; font-size: 13px;}
      table {border-collapse: collapse;}
      td {font-family: arial, sans-serif; color: #333333;}

      @media only screen and (max-width: 480px) {
        body,table,td,p,a,li,blockquote {
          -webkit-text-size-adjust:none !important;
        }
        table {width: 100% !important}

        .responsive-image img {
          height: auto !important;
          max-width: 50% !important;
          width: 50% !important;
        }
      }
    </style>
  </head>
  <body>
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td>
          <table border="0" cellpadding="0" cellspacing="0" align="center" width="640" bgcolor="#FFFFFF">
            <tr>
                {% include "RocketSellerTwoPickBundle:EmailTemplates:header.txt.twig" %}
            </tr>

            <tr>
                <td style="padding: 10px 10px 20px 10px;">
                    <table border="0" cellpadding="0" cellspacing="0" width="100%">
                      <tr>
                          <td>
                            <div style="font-family: 'Open Sans', sans-serif; font-weight: 100; color:#40c1c3; font-size: 20px;width: 90%;margin: 0 auto;">¡Hola {{ userName }}!
                              </div><br />
                          </td>
                      </tr>
                        <tr>
                            <td>
                                <div style="font-family: 'Open Sans', sans-serif; font-weight: 100; color:#909090; font-size: 15px; width:90%;margin:0 auto"><span style="color:#13878e;font-weight:600">Lamentablemente tu pago fue rechazado</span><br>
                      Verifica los datos de tu cuenta e intenta realizar de nuevo el pago o puedes cambiar tu método de pago entrando Symplifica.<br><br>
                                </div>
                            </td>
                        </tr>
                        <tr>
                          <td style="font-family: 'Open Sans', sans-serif; font-weight: 500; font-size: 15px; color:#858789">
                              <a href="https://symplifica.com/" style="text-decoration:none;width: 90%;display:block;margin: 0 auto;" target="_blank;">
                                <div style="background:#13878e;border-radius:25px; height: 25px; font-size:14px; width: 170px; color:#FFFFFF;font-family: 'Open Sans', sans-serif; font-weight: 600; padding: 5px 0 0 0; text-align:center">¡Ir a symplifica!</div></a>
                          </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr>
                <td bgcolor="#F7F7F8">
                    <table  border="0" cellpadding="0" cellspacing="0" width="100%">
                        <tr>
                            <td>
                                <div style="font-family: 'Open Sans', sans-serif; font-weight: 100; color:#909090; font-size: 15px; width:90%;margin:0 auto"><br>
                                    <span style="color:#13878e;font-weight:600">Fecha de rechazo: </span> {{ rejectionDate|localizeddate('long', 'none', 'es-CO') }}<br>
                                    <span style="color:#13878e;font-weight:600">Monto rechazado: </span> ${{ value|number_format(0, '.', ',') }}<br>
                                    <span style="color:#13878e;font-weight:600">Nombre: </span> {{ userName }}

                                </div>
                            </td>
                        </tr>
                         <tr><td style="font-size: 0; line-height: 0;" height="30">&nbsp;</td></tr><!--espacios-->

                    </table>
                </td>
            </tr>

            <tr>
                <td>
                    <div style="font-family: 'Open Sans', sans-serif; font-weight: 100; color:#909090; font-size: 15px; width:90%;margin:0 auto"><br>
                                    <span style="color:#13878e;font-weight:600">¡Que tengas un buen día!</span><br>
                                    Equipo Symplifica<br>

                                </div>
                </td>
            </tr>

            <tr><td style="font-size: 0; line-height: 0;" height="20">&nbsp;</td></tr>
            <tr>
                {% include "RocketSellerTwoPickBundle:EmailTemplates:footer.txt.twig" %}
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
{% endblock %}
