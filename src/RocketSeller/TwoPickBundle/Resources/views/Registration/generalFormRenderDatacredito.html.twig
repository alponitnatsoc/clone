{% extends "::base.html.twig" %}
{% block stylesheet %}
    {{ parent() }}
    <style type="text/css">
        .form-group label {
            font-style: italic;
    		font-weight: 100;
    		text-transform: lowercase;
        }

		.form-group label:first-letter {
		    text-transform: uppercase;
		}

		#form div:last-of-type {
		    border-top: 1px solid #E6E7E8;
		    margin-top: 30px;
    		padding-top: 20px;
		    text-align: center;
		}
    .ultimo {
      clear: both;
    border: dashed 1px #CCC;
    width: 80%;
    border-radius: 5px;
    margin: 62px auto 0 auto;
    padding: 20px 40px;
    }

    </style>
{% endblock stylesheet %}
{% block fos_user_content %}
	<br />
	<div class="row">
		<div class="ultimo" >
			<div>
				<div class="media" >
					<div class="media-left">
						<i class="glyphicon glyphicon glyphicon-user bigIcon"></i>
					</div>
					<div class="media-body legalInCorrect">
						<h4 class="media-heading" style="font-weight: bold;">¡Último paso!</h4>
            Por tu seguridad validaremos tu identidad:<br>
            &#10148; Tienes dos intentos para responder correctamente las preguntas<br>
            &#10148; En caso de que falles da clic en la la pestaña “ayuda” a tu izquierda y te contactaremos
					</div>
				</div>
			</div>
		</div>
	</div>
	<br /><br />
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1" >
			{{ form_start(form) }}
			{{ form_errors(form) }}
			<div id="formFields">
				{{ form_widget(form) }}
			</div>
			{{ form_end(form) }}
		</div>
	</div>

{% endblock fos_user_content %}
