{% trans_default_domain 'FOSUserBundle' %}
{% block subject %}{% autoescape false %}Confirma tu correo{% endautoescape %}{% endblock %}
{% block body_text %}
{% autoescape false %}
{{ 'registration.email.message'|trans({'%username%': user.email, '%confirmationUrl%': confirmationUrl}) }}
{% endautoescape %}
{% endblock %}
{% block body_html %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300italic,600,600italic,700" rel="stylesheet" type="text/css">
<title>Registro Symplifica</title>
<style type="text/css">
      body {margin: 10px 0; padding: 0 10px; background: #FFF; font-size: 13px;}
      table {border-collapse: collapse;}
      td {font-family: arial, sans-serif; color: #333333;}

      @media only screen and (max-width: 480px) {
        body,table,td,p,a,li,blockquote {
          -webkit-text-size-adjust:none !important;
        }
        table {width: 100% !important}

        .responsive-image img {
          height: auto !important;
          max-width: 50% !important;
          width: 50% !important;
        }
      }
    </style>
</head>
<body>
<table border="0" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <td>
      <table border="0" cellpadding="0" cellspacing="0" align="center" width="640" bgcolor="#FFFFFF">
      <tr>
          {% include "RocketSellerTwoPickBundle:EmailTemplates:header.txt.twig" %}
      </tr>

        <tr>
          <td style="padding: 10px 10px 20px 10px;">
            <div style="font-family: 'Open Sans', sans-serif; font-weight: 100; color:#40c1c3; font-size: 20px;width: 90%;margin: 0 auto;">¡Para iniciar tu registro!</div>
            <div style="font-family: 'Open Sans', sans-serif; font-weight: 100; color:#909090; font-size: 15px; width:90%;margin:0 auto"><span style="color:#13878e;font-weight:600">Haz clic en el siguiente botón:</span><br></div>
              <br />
            <a href="{{ confirmationUrl }}" style="text-decoration:none;width: 90%;display:block;margin: 0 auto;" target="_blank;"><div style="background:#13878e;border-radius:25px; height: 25px; font-size:14px; width: 170px; color:#FFFFFF;font-family: 'Open Sans', sans-serif; font-weight: 600; padding: 5px 0 0 0; text-align:center">Confirmar email</div></a><br />
            <div style="font-family: 'Open Sans', sans-serif; font-weight: 300; color:#858789; font-size: 15px;width:90%;margin:0 auto">
                <span style="color:#13878e;font-weight:600">Ó copia el link y pégalo en tu navegador</span><br><br>
                <div>
                    {{ confirmationUrl }}
                </div>
            </div>

          </td>
        </tr>
        <tr><td style="font-size: 0; line-height: 0;" height="30">&nbsp;</td></tr>
        <tr>
            {% include "RocketSellerTwoPickBundle:EmailTemplates:footer.txt.twig" %}
        </tr>
      </table>
    </td>
  </tr>
</table>
</body>
</html>
{% endblock %}
