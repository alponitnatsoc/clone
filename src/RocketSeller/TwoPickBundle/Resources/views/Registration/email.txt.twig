{% trans_default_domain 'FOSUserBundle' %}
{% block subject %}{% autoescape false %}Confirma tu correo en Symplifica{% endautoescape %}{% endblock %}
{% block body_text %}
{% autoescape false %}
{{ 'registration.email.message'|trans({'%username%': user.email, '%confirmationUrl%': confirmationUrl}) }}
{% endautoescape %}
{% endblock %}
{% block body_html %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300italic,600,600italic,700" rel="stylesheet" type="text/css">
<title>Registro Symplifica</title>
<style type="text/css">
    @media only screen and (max-width: 480px) {
        table {width: 100% !important}
    }
</style>
</head>
<body style="margin: 0; padding: 0;">
    <table align="center" border="0" cellpadding="0" cellspacing="0" width="600" style="border-collapse: collapse;">
        <tr>
            {% include "RocketSellerTwoPickBundle:EmailTemplates:header.txt.twig" %}
        </tr>
        <tr>
            <td bgcolor="#ffffff" style="padding: 40px 30px 40px 30px;">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                        <td align="center">
                            <img src="https://symplifica.com/public/img/mail/check.png" alt="check" />
                        </td>
                    </tr>
                    <tr><td style="font-size: 0; line-height: 0;" height="30">&nbsp;</td></tr><!--espacios-->
                    <tr>
                        <td align="center" style="font-family: 'Open Sans', sans-serif; font-weight: 300; font-style:italic; font-size: 20px;color:#858789">
                            Estás muy cerca de acceder a la plataforma más conveniente para administrar a tus empleados.
                        </td>
                    </tr>
                    <tr><td style="font-size: 0; line-height: 0;" height="30">&nbsp;</td></tr><!--espacios-->
                    <tr>
                        <td align="center" style="font-family: 'Open Sans', sans-serif; font-weight: 700; font-size: 25px;color:#5D5D5D">
                            Para finalizar tu registro
                        </td>
                    </tr>
                    <tr>
                        <td align="center" style="font-family: 'Open Sans', sans-serif; font-weight: 600; font-style:italic; font-size: 20px;color:#858789">
                            haz clic en el siguiente link:
                        </td>
                    </tr>
                    <tr><td style="font-size: 0; line-height: 0;" height="30">&nbsp;</td></tr><!--espacios-->
                    <tr>
                        <td align="center" style="font-family: 'Open Sans', sans-serif; font-weight: 600; font-size: 20px;color:#FFFFFF;">
                            <a href="{{ confirmationUrl }}" target="_blank" style="text-decoration:none"><span style="display:block; width:180px; height:35px; background: #DF9036; padding: 5px 0 0 0; color: #FFFFFF;">Confirmar email</span></a>
                        </td>
                    </tr>
                    <tr><td style="font-size: 0; line-height: 0;" height="30">&nbsp;</td></tr><!--espacios-->
                    <tr>
                        <td align="center" style="font-family: 'Open Sans', sans-serif; font-weight: 300; font-style:italic; font-size: 20px;color:#858789">
                            ó cópialo y pégalo en tu navegador
                        </td>
                    </tr>
                    <tr><td style="font-size: 0; line-height: 0;" height="30">&nbsp;</td></tr><!--espacios-->
                    <tr>
                        <td align="center" style="font-family: 'Open Sans', sans-serif; font-weight: 600; font-style:italic; font-size: 20px;color:#DF9036">
                            {{ confirmationUrl }}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            {% include "RocketSellerTwoPickBundle:EmailTemplates:footer.txt.twig" %}
        </tr>
    </table>
</body>
</html>
{% endblock %}