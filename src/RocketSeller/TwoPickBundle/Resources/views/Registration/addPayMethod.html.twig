{% extends "::base.html.twig" %}
{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('public/css/genericPayMethod.css') }}">
{% endblock stylesheet %}

{% block fos_user_content %}

<!--button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addGenericPayMethodModal">Agregar metodo de pago</button>

<!-- Modal -->
<div id="addGenericPayMethodModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body" style="padding: 0">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="position: absolute; right: 15px; top: 15px;z-index: 100; color: #fff;"><span aria-hidden="true">&times;</span></button>
                <div class="row-fluid block-Intro-green clearfix" id="msgSinVerificar1" style="margin-top: 0;">
                    <div class="col-sm-12 col-xs-12 up-Intro" style="font-size: 26px;">Agregar metodo de pago</div>
                </div>
                <div class="row-fluid clearfix cuerpoNovelty" style="padding: 30px; 15px;">
                  <div class="form-black">
                    {{ form_start(form, {'attr': {'id': 'add_pay_method_form'}}) }}
                        {{ form_errors(form) }}

                      <div id="radioButtonPayMethod" >
                        {{ form_row(form.pay_method) }}
                      </div>

                      <div id="tarjetaCredito">
                        {{ form_row(form.name_on_card) }}
                        <div id="infoTarjeta" class="infoTarjeta">
                          {{ form_row(form.credit_card) }}
                        </div>
                        {{ form_label(form.expiry_date_month)}}
                        <div id="expiry_dates">
                          {{ form_widget(form.expiry_date_month) }}
                          {{ form_widget(form.expiry_date_year) }}
                        </div>
                        {{ form_row(form.cvv) }}
                      </div>

                      <div id="cuentaBancaria">
                        {{ form_row(form.titularName) }}
                        {{ form_row(form.documentType) }}
                        {{ form_row(form.documentNumber) }}
                        {{ form_row(form.bankId) }}
                        {{ form_row(form.accountTypeId) }}
                        {{ form_row(form.accountNumber) }}
                      </div>

                    {{ form_end(form) }}
                  </div>
                </div>
            </div>
        </div>
  </div>
</div>


{% endblock fos_user_content %}

{% block javascripts %}
	{{ parent() }}
	<script>
	$.getScript("{{ asset('/public/js/addPayMethod.js') }}").done(function () {
			payMethodLoad();
	});
	</script>
{% endblock %}
