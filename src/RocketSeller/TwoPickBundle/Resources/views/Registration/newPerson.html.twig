        <div class="modal fade" id="otraCosa" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false" >
            <div class="vertical-alignment-helper">
                <div class="modal-dialog vertical-align-center" role="document">
                    <div class="modal-content">
                        <div  id="msgSinVerificar1" style="margin-top: 0;">
                        </div>
                        <div style="padding-top: 30px; padding-bottom: 30px;">
                            <div class="col-xs-4 " style="">
                                <p><img src="/img/check-in.png" style="width: 152px; margin: -105px 0 0 -15px; max-width: 100%;"></p>
                            </div>
                            <div class="col-md-9 col-md-push-3">
