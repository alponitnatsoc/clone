	<!-- Modal -->
<div id="modal_show_SQLNovelties_details" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" style="padding: 0">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="position: absolute; right: 15px; top: 15px;z-index: 100; color: #fff;"><span aria-hidden="true">&times;</span></button>
                <div class="row-fluid block-Intro-green clearfix" id="msgSinVerificar1" style="margin-top: 0;">
                    <div class="col-sm-12 col-xs-12 up-Intro" style="font-size: 26px;">Detalles de n√≥mina</div>
                </div>
                <div class="row-fluid clearfix cuerpoNovelty center" style="padding: 30px;">
                    {% if novelties is defined %}
                        <div class="tittle">
                          <h2>Detalles del costo</h2>
                        </div>
                        <div class="row">
                            <div class="row devengos">Devengos</div>
                            <div class="row">
                            {% for nov in novelties %}
                                {% if nov.noveltyTypeNoveltyType.naturaleza == 'DEV' %}
                                    <div class="col-md-5 leftdata">{{  nov.name }}</div>
                                    <div class="col-md-5 rightdata">${{ nov.sqlValue|number_format(0, '.', ',') }}</div>
                                {% endif %}
                            {% endfor %}
                            <div class="col-md-5 devengos">Total</div>
                            <div class="col-md-5 total">${{ dev|number_format(0, '.', ',') }}</div>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="row devengos">Deducciones</div>
                            <div class="row">
                              {% for nov in novelties %}
                                      {% if nov.noveltyTypeNoveltyType.naturaleza == 'DED' %}
                                          <div class="col-md-5 leftdata">{{  nov.name }}</div>
                                          <div class="col-md-5 rightdata">${{ nov.sqlValue|number_format(0, '.', ',') }}</div>
                                      {% endif %}
                              {% endfor %}
                              <div class="col-md-5 devengos">Total</div>
                              <div class="col-md-5 total">${{ ded|number_format(0, '.', ',') }}</div>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-md-5 devengos">Neto a pagar</div>
                            <div class="col-md-5 total">${{ total|number_format(0, '.', ',') }}</div>
                        </div>
                    {% endif %}
                    <div class="row">
                        <div style="margin-top: 45px;">
                            <button type="button" class="btn btnPrevious" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
