            .label-group{
                text-align: right !important;
                font-size: 16px;
                font-style: italic;
                font-weight: 100;
            }
           
            .form-select{
            color: yellow !important;
            }

            .contain-info-tab{
                width: 100%;
                margin: 0 auto;
                padding: 20px;
                background-color:#f7f7f7;
            }
           
            .line-normal{ border-bottom: 1px solid #e9e9e9; margin-top: 20px; }

             .line-normal:last-child{ border-bottom: none; }

           /* MEDIA QUERIES PARA RESPONSIVE - 20160604 NATALIABH */

            @media (max-width: 1200px){

                .label-group{ font-size: 14px; }
            }

            @media (max-width: 990px){

                .title-center{ text-align: center !important; }

            }

            @media (max-width: 768px){

                .label-group{ text-align: center !important; }
                .contain-info-tab{ width: 70%; text-align: center; }

                .line-responsive{ width: 80%; margin: 0 auto; margin-bottom: 20px; border-bottom: 1px solid #f0f0f0; }

            }

            @media (max-width: 690px){

                .title-center{ font-size: 22px; }

                .contain-info-tab{ width: 90%; text-align: center; }
                .label-group{ font-size: 13px; }
            }

        </style>
    {% endblock %}

    <div class="row">
        <div class="col-sm-12 col-xs-12 align-Resp">
            <div id="" class="col-sm-12 col-xs-12 blockStep inline  nav-link">
                <div id="" class="col-md-2 col-xs-12 txt-AD0" style="text-align: left;">
                    <img src="/img/ico-empleador.png" class="center-block">
                </div>
                <div id="" class="col-md-10 col-xs-12 txt-AD1">
                    <div id="" class="text-left title-center">
                        Datos del Empleador
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="" id='registrationFormContainer' style="margin-bottom:20px;overflow: hidden;">

        <ul class="nav-justified nav-3-tabs">
            <li class="active"><a data-toggle="tab" class="notAjax tabsEnabled" data-target="#basicData">Datos básicos</a></li>
            <!--<li><a data-toggle="tab" class="notAjax tabsEnabled" data-target="#contactData">Datos de contacto</a></li>-->
            <li><a data-toggle="tab" class="notAjax tabsEnabled" data-target="#workplacesData">Lugares de trabajo</a></li>
            <li><a data-toggle="tab" class="notAjax tabsEnabled" data-target="#employerEntities">Seguridad Social</a></li>
        </ul>

        <div class="tab-content">
            <div id="basicData" class="tab-pane fade in active">
                {# render the task's only field: description #}
                <div class="col-md-10 col-md-offset-1 blockUpData content-input" style="border-bottom: none;">
                    <div class="text-center">
                        <span style="color:#71c8c6;font-weight:700;font-size:16px;">{{ employer.personPerson.names}} {{ employer.personPerson.lastName1}} {{ employer.personPerson.lastName2}}</span>
                        <span style="font-weight:700;font-size:14px;">{{ employer.personPerson.documentType}} {{ employer.personPerson.document}}</span>
                    </div>
                    <br />
                    <div class="row contain-info-tab">
                        <div class="row line-responsive"> 
                            <div class="col-sm-6 label-group">
                                Fecha de Nacimiento
                            </div>
                            <div class="col-sm-6 form-group">
                                {{ employer.personPerson.birthDate|date('Y-m-d')}}
                            </div>                                               
                        </div>
                        <div class="row line-responsive">
                            <div class="col-sm-6 label-group">
                                Dirección principal
                            </div>
                            <div class="col-sm-6 form-group input">
                                {{ employer.personPerson.mainAddress}}
                            </div>                    
                        </div>
                        <div class="row line-responsive">
                            <ul class="phones">
                                {% for phone in employer.personPerson.phones %}
                                    <li id="phone_{{loop.index}}" class="phoneLi">
                                        <div class="col-sm-6 label-group">
                                            Número
                                        </div>
                                        <div class="col-sm-6 form-group input">
                                            {{ phone.phoneNumber}}
                                        </div>                                                                        
                                    </li>
                                {% endfor %}
                            </ul>
                        </div> 
                        <div class="row line-responsive">
                            <div class="col-sm-6 label-group">
                                Departamento
                            </div>
                            <div class="col-sm-6 form-group">
                                {{ employer.personPerson.department}}
                            </div>                    
                        </div>
                        <div class="row">
                            <div class="col-sm-6 label-group">
                                Ciudad
                            </div>
                            <div class="col-sm-6 form-group">
                                {{ employer.personPerson.city}}
                            </div>                    
                        </div>
                    </div>
                </div>

            </div>
            <!--
            <div id="contactData" class="tab-pane fade in">
                
                <div class="col-sm-12 col-xs-12 block-Intro">
                    <span style="color:#666; font-weight:300"><i class="fa fa-info-circle"></i> Recuerda que los campos marcados con * son obligatorios</span>
                </div>
                <br></br>
                <div class="col-sm-10 col-xs-12 blockUpData">
                                                              
                    
                </div>
                <br/><br/>

            </div>
            -->
            <div id="workplacesData" class="tab-pane fade">
                <div class="col-md-10 col-md-offset-1 blockUpData content-input" style="border-bottom: none;">
                    <div class="text-center">
                            <span style="color:#71c8c6;font-weight:700;font-size:14px;">{{ employer.personPerson.names}} {{ employer.personPerson.lastName1}} {{ employer.personPerson.lastName2}}</span>
                            <span style="font-weight:700;font-size:14px;">{{ employer.personPerson.documentType}} {{ employer.personPerson.document}}</span>
                        </div>
                    <br />
                    <div class="row contain-info-tab">
                    {# iterate over each existing workplaces and render its fields #}
                        
                        <ul class="workplaces" style="list-style: none; padding: 0; margin: 0">
                            {% for workplace in employer.workplaces %}
                                
                                <div id="workSpace_{{loop.index}}" class="col-sm-12 workSpaceLi">
                                    
                                    <div class="row contain-info-tab">
                                    
                                            <div class="row line-responsive">
                                                <div class="col-sm-6 label-group">
                                                    Nombre
                                                </div>
                                                <div class="col-sm-6 form-group input">
                                                    {{ workplace.name}}
                                                </div>                                                                                
                                            </div>
                                            <div class="row line-responsive">
                                                <div class="col-sm-6 label-group">
                                                    Dirección
                                                </div>
                                                <div class="col-sm-6 form-group input">
                                                    {{ workplace.mainAddress}}
                                                </div>
                                            </div>
                                            <div class="row line-responsive">
                                                <div class="col-sm-6 label-group">
                                                    Departamento
                                                </div>
                                                <div class="col-sm-6 form-group">
                                                    {{ workplace.department}}
                                                </div>                                                                            
                                            </div>
                                            <div class="col-xs-12 col-sm-12">
                                                <div class="col-sm-6 label-group">
                                                    Ciudad
                                                </div>
                                                <div class="col-sm-6 form-group">
                                                    {{ workplace.city}}
                                                </div>                                        
                                            </div>
                                            
                                        
                                    </div>
                                </div>
                                
                            {% endfor %}                    
                        </ul>
                    </div>
                </div>
            </div>
            <div id="employerEntities" class="tab-pane fade in">
                <div class="col-md-10 col-md-offset-1 blockUpData content-input" style="border-bottom: none;">
                        <!--
                        <div class="col-sm-12 col-xs-12 text-center">
                            <p style="font-weight:100;">
                                La Administradora de Riesgos Laborales y la Caja de Compensación Familiar a las cuales estas afiliado.
                            </p>
                        </div>-->
                        <div class="text-center">
                            <span style="color:#71c8c6;font-weight:700;font-size:14px;">{{ employer.personPerson.names}} {{ employer.personPerson.lastName1}} {{ employer.personPerson.lastName2}}</span>
                            <span style="font-weight:700;font-size:14px;">{{ employer.personPerson.documentType}} {{ employer.personPerson.document}}</span>
                        </div>
                        <br />
                        <div class="row contain-info-tab">
                            
                   
                                    <div class="col-sm-12 col-xs-12">
                                        <div class="col-sm-12 form-group">
                                            <ul class="severances"  style="list-style: none; padding:0;">
                                                {% for entity in employer.entities %}
                                                    <div id="workSpace_{{loop.index}}" class="col-sm-12 workSpaceLi line-normal line-responsive">
                                                        <div class="row" style="margin-bottom:10px;">
                                                            <div style="text-align:center !important" class="col-sm-12 text-center label-group">
                                                                {% set entityType=  entity.entityEntity.entityTypeEntityType %}
                                                                {{ entityType.name }}
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div style="text-align:center !important" class="col-sm-12 text-center form-group input">
                                                                {{ entity.entityEntity.name }}
                                                            </div>
                                                        </div> 
                                                        
                                                    </div>
                                                    
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    </div>
                                
                            
                        </div>
                    </div>
            </div>
        </div>

    </div>
    <div class="row" style="margin-top:20px;">
        <div class="col-sm-12" style="border-bottom: solid #ccc;border-bottom-width: 0px; margin-bottom:20px;">
           <div class="col-sm-10 col-md-offset-1 button-bottom center" style="border-top: 1px solid #eee; padding-top: 20px;">
                <a btn class="btn btn-orange" href="{{ path('edit_employer') }}" class="nav-link">Editar datos</a>
            </div>
        </div>

    </div>

{% endblock fos_user_content%}
