{% extends "::base.html.twig" %}
{% block fos_user_content %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/daviplata.css') }}"/>
    <div id="formFields" class="form-black">
        <div class="row">
            <div class="col-md-10 col-md-push-1">
                <br/>
                <br/>
                <div class="textoda">
                    <h2 style="font-size:25px" class="light azulmediofont">¿Cómo creo una cuenta en Daviplata para mi empleado?</h2>
                    <p class="light grisclarofont">Sigue las instrucciones en los siguientes videos:</p>
                </div>
                  <div style="text-align: center;">
                    <div class="videoCont">
                      <div class="divFix">
                        <div class="col-md-6">
                        <iframe width="100%" height="auto" src="https://www.youtube.com/embed/tZ8zXHao75M" frameborder="0" allowfullscreen></iframe>
                        </div>
                        <div class="col-md-6">
                          <iframe width="100%" height="auto" src="https://www.youtube.com/embed/2An52p799Fk" frameborder="0" allowfullscreen></iframe>
                        </div>
                      </div>
                      <div class="light grisclarofont" style="margin:15px 0">
                        <p style="font-size:17px">O sigue el paso a paso haciendo clic
                        <a href="https://daviplata.com/wps/portal/daviplata/Home/ComoActivarse/!ut/p/b1/04_Sj9Q1MTcyNDQysTDTj9CPykssy0xPLMnMz0vMAfGjzOKNLQJN_LycjHydQ11cDRwDvQ1MXUMNvdydjIEKIoEKDHAARwNC-sP1o8BKTNw9fQxdzQIczQJC3AwczdxcPY18jY3cHY2hCvBY4eeRn5uqnxuVY-mp66gIAPU3Hes!/dl4/d5/L2dBISEvZ0FBIS9nQSEh/">
                          <strong class="azulmediofont">AQUÍ</strong></a></p>
                      </div>
                      <div class="spanRecuerda">
                        <span><strong>Recuerda que:</strong><br> Es importante registrar el número para hacer la transferencia a tu empleado.</span>
                      </div>
                    </div>
                    <div class="activarCuenta">
                      {% if form.cellphone is defined %}
                          <div id="step2">
                              <p class="spanRecuerda">Ahora debes escribir el número que registraste en Daviplata para guardarlo en Symplifica</p>
                              {{ form_row(form.cellphone) }}
                              {{ form_row(form.save) }}
                          </div>
                      {% endif %}
                      {% if form.create is defined %}
                          <div id="step1">
                              {{ form_row(form.create) }}
                          </div>

                      {% endif %}
                      {% if form.discard is defined %}
                          <div id="step3">
                              {{ form_row(form.discard) }}
                          </div>
                      {% endif %}
                  </div>
                    <div>
                      <a href="{{ path('show_dashboard') }}" class="notAjax btn btn-grisBorde buttond">
                        Hacerlo más tarde</a>
                      <button id="btn-video" class="btn btn-azul buttond">
                        Activar Cuenta
                      </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--modal daviplata

        <div id="triggermoda" class="modalito">

        -- Modal content --
          <div class="modal-contenido">
            <span class="close1" style="color:#FFF;font-weight:bold;text-align:right;padding: 5px 20px 5px 0;font-size:30px;cursor:pointer">×</span>
            <iframe width="100%" height="95%" src="https://www.youtube.com/embed/2An52p799Fk" frameborder="0" allowfullscreen></iframe>
          </div>

        </div>
  fin modal daviplata-->
    <script>
            // Get the modal
            var moda = document.getElementById('triggermoda');

            // Get the button that opens the modal
            var btn1 = document.getElementById('btn-video');

            // Get the <span> element that closes the modal
            var span1 = document.getElementsByClassName("close1")[0];

            // When the user clicks the button, open the modal
            btn1.onclick = function() {
                moda.style.display = "block";
            }

            // When the user clicks on <span> (x), close the modal
            span1.onclick = function() {
                moda.style.display = "none";
            }

            // When the user clicks anywhere outside of the modal, close it
            moda.onclick = function(event) {
                if (event.target == moda) {
                    moda.style.display = "none";
                }
            }
    </script>
    {{ form_end(form) }}
{% endblock fos_user_content %}
