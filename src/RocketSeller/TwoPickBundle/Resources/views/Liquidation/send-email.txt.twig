{% trans_default_domain 'FOSUserBundle' %}
{% block subject %}{% autoescape false %}Liquidación definitiva{% endautoescape %}{% endblock %}
{% block body_text %}
{% autoescape false %}
&#161;Hola&#33;
{{ user.personPerson.names }} te ha enviado el detalle de la liquidación definitiva.
{% endautoescape %}
{% endblock %}
{% block body_html %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300italic,600,600italic,700" rel="stylesheet" type="text/css">
    <title>Responsive email</title>
    <style type="text/css">
      body {margin: 10px 0; padding: 0 10px; background: #F9F2E7; font-size: 13px;}
      table {border-collapse: collapse;}
      td {font-family: arial, sans-serif; color: #333333;}
      @media only screen and (max-width: 480px) {
        body,table,td,p,a,li,blockquote {
          -webkit-text-size-adjust:none !important;
        }
        table {width: 100% !important}
        .responsive-image img {
          height: auto !important;
          max-width: 50% !important;
          width: 50% !important;
        }
      }
    </style>
  </head>
  <body>
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td>
          <table border="0" cellpadding="0" cellspacing="0" align="center" width="640" bgcolor="#FFFFFF">
            <tr>
              {% include "RocketSellerTwoPickBundle:EmailTemplates:header.txt.twig" %}
            </tr>
            <tr><td style="font-size: 0; line-height: 0;" height="30">&nbsp;</td></tr>
            <tr>
              <td style="padding: 10px 10px 20px 10px; text-align: center">
                <div style="color:#5D5D5D;font-size: 20px; font-family: 'Open Sans', sans-serif; font-weight: 700;">{{ dump(user.personPerson) }}</div>
                <br /><br />
                <div style="font-size: 20px; font-family: 'Open Sans', sans-serif; font-weight: 300; color: #858688; width: 70%; margin: 0 auto">
                  Te ha enviado el detalle de la liquidación definitiva del contrato de trabajo.
                </div>
                <br /><br /><br />
                <div style="text-align: center; font-size: 17px; font-family: 'Open Sans', sans-serif; font-weight: 300; font-style: italic; color: #858688; padding: 0 60px;">
                    El archivo viene adjunto en este correo para que puedas descargarlo e imprimirlo.
                </div><br />
              </td>
            </tr>
            <tr><td style="font-size: 0; line-height: 0;" height="20">&nbsp;</td></tr>
            <tr>
              {% include "RocketSellerTwoPickBundle:EmailTemplates:footer.txt.twig" %}
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
{% endblock %}