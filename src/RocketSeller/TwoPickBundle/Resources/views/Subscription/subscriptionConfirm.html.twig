                                </div>
                                <div class="col-sm-6 form-group">
                                    {{ form_widget(form.names) }}
                                </div>
                                <!--<img src="/img/typePerson.png">-->
                            </div>
                            <div class="col-sm-12 col-xs-12 hidden">
                                <div class="col-sm-6 label-group">
                                </div>
                                <div class="col-sm-6 form-group">
                                    {{ form_widget(form.razonSocial) }}
                                </div>
                                <!--<img src="/img/typePerson.png">-->
                            </div>
                            <div class="col-sm-12 col-xs-12">
                                <div class="col-sm-6 label-group">
                                    {{ form_label(form.lastName1) }}
                                </div>
                                <div class="col-sm-6 form-group">
                                    {{ form_widget(form.lastName1) }}
                                </div>
                                <!--<img src="/img/typePerson.png">-->
                            </div>
                            <div class="col-sm-12 col-xs-12">
                                <div class="col-sm-6 label-group">
                                    {{ form_label(form.lastName2) }}
                                </div>
                                <div class="col-sm-6 form-group">
                                    {{ form_widget(form.lastName2) }}
                                </div>
                                <!--<img src="/img/typePerson.png">-->
                            </div>
                            <div class="col-sm-12 col-xs-12">
                                <div class="col-sm-6 label-group">
                                    {{ form_label(form.department) }}
                                </div>
                                <div class="col-sm-6 form-group">
                                    {{ form_widget(form.department) }}
                                </div>
                                <!--<img src="/img/typePerson.png">-->
                            </div>
                            <div class="col-sm-12 col-xs-12">
                                <div class="col-sm-6 label-group">
                                    {{ form_label(form.city) }}
                                </div>
