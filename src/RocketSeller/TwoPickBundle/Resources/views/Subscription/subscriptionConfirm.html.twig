                <input type="checkbox" name="chkSameAdress" id="chkSameAdress" value="1" checked="true"/>
                <label for="chkSameAdress">Mismos datos del empleador</label>
                <div name="divSameAdress" id="divSameAdress" class="toHide2">
                    <label style="font-weight: bold;">{{ employer.names ~" "~ employer.lastName1 ~" "~ employer.lastName2  }}</label><br>
                    <label>{{ employer.mainAddress }}</label><br>
                    <label>{{ employer.city.name ~", "~ employer.department.name }}</label>
                </div>
                <div name="divOtherAdress" id="divOtherAdress" class="toHide">
                    <div class="formulario col-xs-12" style="border: none;">
                        <div class="col-sm-10 col-xs-12 blockUpData content-input" style="border-bottom: none;">
                            <div class="col-sm-12 col-xs-12 blockUpData" >
                                <div class="col-sm-6 col-xs-12 col-sm-push-3">
                                    {{ form_row(form.personType) }}
                                </div>
                            </div>
                            <div class="col-sm-12 col-xs-12">
                                <div class="col-sm-6 label-group">
                                    {{ form_label(form.documentType) }}
                                </div>
                                <div class="col-sm-6 form-group">
                                    {{ form_widget(form.documentType) }}
                                </div>
                                <!--<img src="/img/typePerson.png">-->
                            </div>
                            <div class="col-sm-12 col-xs-12">
                                <div class="col-sm-6 label-group">
                                    {{ form_label(form.document) }}
